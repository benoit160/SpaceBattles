<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Class="pa-4 rounded-xl">
        <MudText Typo="Typo.h6" Align="Align.Center">@_waitingText</MudText>
        <MudProgressLinear Size="Size.Large" Rounded Color="Color.Info" Indeterminate Class="my-7" />
    </MudPaper>
</MudContainer>

@code {
    private string _waitingText = "...";

    public async Task ShowWaitingScreen(bool creating)
    {
        _waitingText = creating 
            ? "Creating universe..."
            : "Loading your save data...";
        
        StateHasChanged();

        await Task.Delay(3000);
    }
}