@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject SaveService SaveService
@inject BotService BotService

<MudThemeProvider Theme="@MainLayout.SpaceBattlesTheme"/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Dark" Fixed>
        <MudText Typo="Typo.h4" Color="Color.Info" Style="font-family:TitleFont;font-style:italic;">SpaceBattles</MudText>

        <MudButton Href="/Overview" Size="Size.Small" Variant="_page == CurrentPage.Overview ? Variant.Filled : Variant.Outlined" Color="Color.Info" Class="ml-8 mr-2" DisableRipple>Overview</MudButton>
        <MudButton Href="/Buildings" Size="Size.Small" Variant="_page == CurrentPage.Buildings ? Variant.Filled : Variant.Outlined" Color="Color.Info" Class="mx-2" DisableRipple>Buildings</MudButton>
        <MudButton Href="/Shipyard" Size="Size.Small" Variant="_page == CurrentPage.Shipyard ? Variant.Filled : Variant.Outlined" Color="Color.Info" Class="mx-2" DisableRipple>Shipyard</MudButton>
        <MudButton Href="/Defenses" Size="Size.Small" Variant="_page == CurrentPage.Defenses ? Variant.Filled : Variant.Outlined" Color="Color.Info" Class="mx-2" DisableRipple>Defenses</MudButton>
        <MudButton Href="/Universe" Size="Size.Small" Variant="_page == CurrentPage.Universe ? Variant.Filled : Variant.Outlined" Color="Color.Info" Class="mx-2" DisableRipple>Universe</MudButton>

        <MudSpacer />
        
        <MudButton Href="/Statistics" 
                   Variant="_page == CurrentPage.Statistics ? Variant.Filled : Variant.Outlined" StartIcon="@Icons.Material.Filled.QueryStats" 
                   IconColor="_page == CurrentPage.Statistics ? Color.Warning : Color.Info" Color="Color.Info" Size="Size.Small" Class="mx-2">Statistics</MudButton>
        <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Outlined.Save" IconColor="Color.Success" Color="Color.Success" Size="Size.Small" OnClick="@SaveGame" Class="mx-2">Save</MudButton>
        <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Error" OnClick="@Logout">Log out</MudButton>
    </MudAppBar>
    
    <MudMainContent Style="display:flex; flex-direction:column; justify-content:center; height: 100vh;">
        @Body
    </MudMainContent>
</MudLayout>

<style>    
    body {
        background: url("images/background.avif") no-repeat;
        background-size: cover;
        height: 100vh;
    }
    
    .mud-paper {
        backdrop-filter: blur(6px);
    }
    
    .mud-typography, .mud-image {
        pointer-events: none;
        user-select: none;
    }
</style>

@code {
    private CurrentPage _page;
    private EventHandler<LocationChangedEventArgs>? _locationEvent;

    private enum CurrentPage
    {
        Overview, 
        Buildings,
        Shipyard,
        Defenses,
        Universe,
        Statistics
    }

    protected override void OnInitialized()
    {
        _page = CurrentPage.Overview;

        _locationEvent = (_, e) =>
        {
            string target = e.Location;
            if (target.Contains("/Building/"))
            {
                _page = CurrentPage.Buildings;
                return;
            }

            switch (e.Location.Split('/').Last())
            {
                case "Overview":
                    _page = CurrentPage.Overview;
                    break;

                case "Buildings":
                    _page = CurrentPage.Buildings;
                    break;
                    
                case "Shipyard":
                    _page = CurrentPage.Shipyard;
                    break;
                    
                case "Defenses":
                    _page = CurrentPage.Defenses;
                    break;
                    
                case "Universe":
                    _page = CurrentPage.Universe;
                    break;
                    
                case "Statistics":
                    _page = CurrentPage.Statistics;
                    break;
            }

            StateHasChanged();
        };

        NavigationManager.LocationChanged += _locationEvent;
    }

    private async Task SaveGame()
    {
        await SaveService.SaveToStorage();
    }

    private void Logout()
    {
        BotService.Dispose();
        NavigationManager.LocationChanged -= _locationEvent;
        NavigationManager.NavigateTo("/");
    }
}