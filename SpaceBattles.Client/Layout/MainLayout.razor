@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="@SpaceBattlesTheme" />

<MudDialogProvider 
    FullWidth="true" 
    MaxWidth="MaxWidth.Small"
    DisableBackdropClick="false"    
/>

<MudSnackbarProvider/>

<MudStack Justify="Justify.Center" Style="height:100vh; padding-bottom:100px">
    <MudContainer MaxWidth="MaxWidth.Large">
        @Body
    </MudContainer>
</MudStack>

<style>    
    body {
        background: url("images/background.avif") no-repeat;
        background-size: cover;
        height: 100vh;
    }
</style>

@code {

    public static readonly MudTheme SpaceBattlesTheme = new MudTheme
    {
        Palette = new PaletteDark()
        {
            // Surface = "373740da",
            Surface = new MudColor(55, 55, 64, 0.6),
            OverlayDark = "rgba(33,33,33,0.9)"
        }
    };
}